       <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-xs-12">
              <div class="box">
                <div class="box-header">
                  <h3 class="box-title">Lista de Beacons</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <table id="beacons_table" class="display table table-bordered table-striped" cellspacing="0" width="100%">
                    <thead>
                      <tr>
                        <th>Nombre</th>
                        <th>UUID</th>
                        <th>Major</th>
                        <th>Minor</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% @beacons.each_with_index do |beacon,index| %>
                      <tr class="link" data-toggle="modal" data-target=<%="#modal-beacon-"+index.to_s%>>
                        <td><%= beacon.name %></td>
                        <td><%= beacon.uuid %></td>
                        <td><%= beacon.major %></td>
                        <td><%= beacon.minor %></td>
                      </tr>
                        <div class="example-modal">
                          <div class="modal fade" id=<%="modal-beacon-"+index.to_s%>>
                            <div class="modal-dialog">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                  <h4 class="modal-title">Informaci√≥n</h4>
                                </div>
                                <div class="modal-body">
                                  <div class="row">
                                    <div class="col-xs-12">
                                      <div class="box box-solid">
                                        <div class="box-header with-border">
                                          <i class="fa fa-text-width"></i>
                                          <h3 class="box-title">Datos del Beacon</h3>
                                        </div><!-- /.box-header -->
                                        <div class="box-body">
                                          <div class="row">
                                            <div class="col-xs-12 col-sm-6">
                                              <%= image_tag beacon.picture,class: "img-detail"%>
                                            </div>
                                            <div class="col-xs-12 col-sm-6">
                                                <dl class="dl-horizontal">
                                                  <label>Nombre:</label>
                                                  <span><%=beacon.name%></span><br>
                                                  <label>Tienda Asociada:</label>
                                                  <span><%=beacon.store.name%> (<%=beacon.store.commerce.name%>)</span><br>
                                                  <label>UUID:</label>
                                                  <span><%=beacon.uuid%></span><br>
                                                  <label>Major:</label>
                                                  <span><%=beacon.major%></span><br>
                                                  <label>Minor:</label>
                                                  <span><%=beacon.minor%></span><br>
                                                </dl>
                                            </div>
                                          </div>
                                        </div><!-- /.box-body -->
                                      </div><!-- /.box -->
                                      <button type="button" class="btn btn-primary" aria-label="Left Align" onclick="window.location.href='<%=admin_store_path(beacon.store)%>'"><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span> Ver tienda asociada &nbsp;</button>
                                    </div><!-- ./col -->
                                  </div><!-- /.row -->
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cerrar</button>
                                  
                                  <button data-url=<%=admin_beacons_path%> data-id=<%=beacon.id%> type="button" class="btn btn-danger delete-record">Eliminar</button>
                                  <button type="button" class="btn btn-primary" aria-label="Left Align" onclick="window.location.href='<%=edit_admin_beacon_path(beacon)%>'">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar &nbsp;
                                  </button>
                                </div>
                              </div><!-- /.modal-content -->
                            </div><!-- /.modal-dialog -->
                          </div><!-- /.modal -->
                        </div><!-- /.example-modal -->
                      <% end %>
                    </tbody>
                    <tfoot>
                      <tr>
                        <th>UUID</th>
                        <th>Major</th>
                        <th>Minor</th>
                      </tr>
                    </tfoot>
                  </table>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->
          </div><!-- /.row -->
        </section><!-- /.content -->


 <script>
      $(function () {
        $("#beacons_table").DataTable({
          "language": {
            "url": "/plugins/datatables/dataTables.spanish.lang"
          },
          "columnDefs": [ {
          "targets": 'no-sort',
          "orderable": false,
          "searchable": false
          } ],
          stateSave: true
        });
      });
</script>
