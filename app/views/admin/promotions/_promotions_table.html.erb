          <div class="row">
            <div class="col-xs-12">


              <div class="box">
                <div class="box-header">
                  <h3 class="box-title">Lista de Promociones</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <table id="promotions_table" class="display table table-bordered table-striped" cellspacing="0" width="100%">
                    <thead>
                      <tr>
                        <th>Titulo</th>
                        <th>Descripción</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% @promotions.each_with_index do |promotion,index| %>
                      <tr class="link" data-toggle="modal" data-target=<%="#modal-promotion-"+index.to_s%>>
                        <td><%= promotion.name %></td>
                        <td ><%= promotion.description %></td>
                      </tr>
                        <div class="example-modal">
                          <div class="modal fade" id=<%="modal-promotion-"+index.to_s%>>
                            <div class="modal-dialog">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                  <h4 class="modal-title">Información</h4>
                                </div>
                                <div class="modal-body">
                                  <div class="row">
                                    <div class="col-xs-12">
                                      <div class="box box-solid">
                                        <div class="box-header with-border">
                                          <i class="fa fa-text-width"></i>
                                          <h3 class="box-title">Datos de la promocion</h3>
                                        </div><!-- /.box-header -->
                                        <div class="box-body">
                                          <dl>
                                            <dt>Nombre:</dt>
                                            <dd><%=promotion.name%></dd>
                                            <dt>Descripción:</dt>
                                            <dd><%=promotion.description%></dd>
                                                                              
                                          </dl>
                                       
                                       </div><!-- /.box-body -->
                                      </div><!-- /.box -->
                                    </div><!-- ./col -->
                                  </div><!-- /.row -->
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cerrar</button>
                                  
                                  <button data-url=<%=admin_promotions_path(promotion)%> data-id=<%=promotion.id%> type="button" class="btn btn-danger delete-record">Eliminar</button>
                                  <button type="button" class="btn btn-primary" aria-label="Left Align" 
                                    onclick="window.location.href=
                                    '<%=edit_admin_promotion_path(promotion) %>'">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar &nbsp;
                                  </button>
                                </div>
                              </div><!-- /.modal-content -->
                            </div><!-- /.modal-dialog -->
                          </div><!-- /.modal -->
                        </div><!-- /.example-modal -->
                      <% end %>
                    </tbody>
                    <tfoot>
                      <tr>
                        <th>Título</th>
                        <th>Descripción</th>
                      </tr>
                    </tfoot>
                  </table>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->
          </div><!-- /.row -->

           <script>
      $(function () {
        $("#promotions_table").DataTable({
          "language": {
            "url": "/plugins/datatables/dataTables.spanish.lang"
          },
          "columnDefs": [ {
          "targets": 'no-sort',
          "orderable": false,
          "searchable": false
          } ],
          stateSave: true
        });
      });
</script>