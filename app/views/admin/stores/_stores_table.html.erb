           <script>
      $(function () {
        $("#stores_table").DataTable({
          "language": {
            "url": "/plugins/datatables/dataTables.spanish.lang"
          },
          "columnDefs": [ {
          "targets": 'no-sort',
          "orderable": false,
          "searchable": false
          } ],
          stateSave: true
        });
        var store_id = "<%=@store!=nil ? @store.id.to_s : nil%>"
        if (store_id.trim().length>0) {
          $("#modal-store-"+store_id).modal("show")
        }
        var current_state={target:null};
        window.onpopstate = function(e){
           if(e.state){
                if(e.state.target && current_state.target!=e.state.target){
                  current_state=e.state;
                  $.each($(".detail-store"), function( index, element ) {
                    $(element).modal("hide");
                  });
                  $.each($(".modal-backdrop"), function( index, element ) {
                    $(element).remove()
                  });
                  setTimeout(function(){$(e.state.target).modal("show");},0)
                }                
            }
        };

        $(".open-map").on("click",initMap)
        mapsInitialized=[];
        function initMap() {
            var element=$(this)
            var id = element.data("id");
            //var lat = $(element).data("latitude");
            //var lon = $(element).data("longitude");
            var myCenter=new google.maps.LatLng(18.466817,-69.913237);
            $("#map-1").html("")
            $("#map-2").html("")
            debugger
            if(mapsInitialized.indexOf(id)==-1){
            var mapProp = {
              center:new google.maps.LatLng(18.466817,-69.913237),
              zoom:18,
              mapTypeId:google.maps.MapTypeId.ROADMAP,
              scrollwheel: false
            };
              var map=new google.maps.Map(document.getElementById("map-"+id), mapProp);
              var marker=new google.maps.Marker({
              position:myCenter,
                animation:google.maps.Animation.BOUNCE
              });

            marker.setMap(map);
              mapsInitialized.push(id);
              console.log("init map of store nro::"+id)
            }
        }
      });
</script>