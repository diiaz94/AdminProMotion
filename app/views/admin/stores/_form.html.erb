<%= form_for(@store,url: (@store.new_record? ? admin_stores_url : admin_store_url),:html => {:class => "form-with-img"}) do |f| %>
  <script type="text/javascript">
   var errorsArray=[] ;
  <% @store.errors.each do |atributo, mensaje| %>
      errorsArray.push({atributo:"<%="#{atributo}"%>",mensaje:"<%="#{mensaje}"%>"});
  <% end %>
  $( document ).ready(function() {
    validarErrores(errorsArray);
  });
</script>

  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title">Datos de la Tienda</h3>
    </div><!-- /.box-header -->

    <div class="box-body">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
          <div class="field">
            <%=f.label :photo, "Imagen de la tienda"%><br>
            <%= image_tag @store.picture, id: "containerImage", class: "img-upload"%><br>
            <button type="button" style="margin-top:5px;" class="btn btn-default"  onclick="$('#file').click();">
              <span class="glyphicon glyphicon-camera" aria-hidden="true" style="margin-right:5px;" ></span>
              Cargar Imagen &nbsp;
            </button>
          </div>
          <script>
            var loadFile = function(event) {
              var reader = new FileReader();
              reader.onload = function(){
                var output = document.getElementById('containerImage');
                output.src = reader.result;
              };
              reader.readAsDataURL(event.target.files[0]);
            };

          </script>
        </div>
      </div>
      <div class="row">
          <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <div class="form-group">
              <%= f.label :name, "Nombre" %>*<br>
              <%= f.text_field :name,class:"form-control" %>
            </div>
        </div>
      </div>
      <div class="row">
          <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <div class="form-group">
              <%= f.label :email, "Email" %>*<br>
              <%= f.email_field :email,class:"form-control" %>
            </div>
        </div>
      </div>
            <div class="row">
              <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <div class="form-group">
                  <%= f.label :phone,"Celular" %><br>
                  <div class="input-group">
                    <div class="input-group-addon">
                      <i class="fa fa-phone"></i>
                    </div>
                    <%= f.text_field :phone,class:"form-control", "data-inputmask" => '"mask": "(9999) 999-9999"'  %>
                  </div><!-- /.input group -->
                </div>
              </div>
            </div>
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
          <div class="form-group">
            <%= f.label :category_id, "Categoria" %>*<br>
            <%= f.select :category_id, options_for_select(Category.all.pluck(:name,:id),( @store.category ? @store.category_id : "" )),{},{class:"form-control select2"}%>
          </div>
        </div>
      </div>
      <div class="row">
          <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <div class="form-group">
              <%= f.label :address, "Dirección" %>*<br>
              <%= f.text_area :address ,class:"form-control" %>
            </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
          <div class="form-group">
            <%= f.label :commerce_id, "Comercio Propietario" %>*<br>
            <%= f.select :commerce_id, options_for_select(Commerce.all.pluck(:name,:id),( @store.commerce ? @store.commerce_id : "" )),{},{class:"form-control select2"}%>
          </div>
        </div>
      </div>
      <div class="row">
          <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
            <div class="form-group">
              <%= f.label :description, "Descripción" %><br>
              <%= f.text_area :description ,class:"form-control" %>
            </div>
        </div>
      </div>

    </div><!-- /.box-body -->
  </div><!-- /.box -->
  
    <div class="box-footer">
      <button type="button" style="margin-top:5px;" class="visible-xs btn btn-block btn-primary btn-lg" aria-label="Left Align" onclick="getUrlImage('store');"><%= (@store.new_record? ? "Crear Tienda" : "Actualizar Tienda")%></button>
    <button type="button" style="margin-top:5px;" class="hidden-xs btn btn-primary" aria-label="Left Align" onclick="getUrlImage('store');"><%= (@store.new_record? ? "Crear Tienda" : "Actualizar Tienda")%></button>
    </div>
<% end %>

<div class="hidden">
  <form id = "file-img" method="POST" action="http://uploads.im/api?upload" enctype="multipart/form-data">
    <input type="file" id="file" name="file" onchange= "loadFile(event)" />
    <input type="submit" value="SEND FILE">
  </form>
</div>
<script>
      $(function () {
        //Initialize Select2 Elements
        $(".select2").select2();
        $("#store_phone").inputmask();
      });
</script>